<section class="hero">
  <div class="hero-body">
    <div class="columns">
      <div class="column"></div>
      <div class="column">
        <h1 class="title">Reset password</h1>
        <p>
          Enter your email below and we will send you a password reset link
        </p>
        <br>

        <form {{action 'reset' email on='submit'}}>

          <div class="field">
            <div class="control has-icons-left has-icons-right">
              {{input class='input' type='email' placeholder='Enter your email' value=email autofocus="autofocus"}}
              <span class="icon is-small is-left">
                <i class="fa fa-envelope"></i>
              </span>
            </div>
            {{form-errors errors=formErrors for='email'}}
          </div>
          <br>
          <div class="field is-grouped">
            <div class="control">
              <button class="button is-primary">Send reset link</button>
            </div>
            <div class="control">
              {{#link-to "index" class="button is-link"}}Cancel{{/link-to}}
            </div>
          </div>

        </form>
      </div>
      <div class="column"></div>
    </div>
  </div>
</section>
