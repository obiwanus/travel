<section class="hero">
  <div class="hero-body">
    <div class="columns">
      <div class="column"></div>
      <div class="column">
        <h1 class="title">Sign up</h1>

        <div class="field">
          <label class="label">First name</label>
          <div class="control">
            <input class="input" type="input" placeholder="Enter your first name">
          </div>
        </div>

        <div class="field">
          <label class="label">Last name</label>
          <div class="control">
            <input class="input" type="input" placeholder="Enter your last name">
          </div>
        </div>

        <div class="field">
          <label class="label">Email</label>
          <div class="control has-icons-left has-icons-right">
            <input class="input" type="email" placeholder="E.g. john.smith@gmail.com">
            <span class="icon is-small is-left">
              <i class="fa fa-envelope"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <label class="label">Password</label>
          <div class="control has-icons-left">
            <input class="input" type="password" placeholder="Password">
            <span class="icon is-small is-left">
              <i class="fa fa-lock"></i>
            </span>
          </div>
        </div>
        <br>
        <div class="field is-grouped">
          <div class="control">
            <button class="button is-primary">Sign up</button>
          </div>
          <div class="control">
            {{#link-to "index" class="button is-link"}}Cancel{{/link-to}}
          </div>
        </div>
      </div>
      <div class="column"></div>
    </div>
  </div>
</section>
