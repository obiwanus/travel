<section class="hero">
  <div class="hero-body">
    <div class="columns">
      <div class="column"></div>
      <div class="column">
        <h1 class="title">Log in</h1>

        <form {{action 'login' on='submit'}}>

          <div class="field">
            <label class="label">Email</label>
            <div class="control has-icons-left has-icons-right">
              {{input class='input' type='email' placeholder='Enter your email' value=email}}
              <span class="icon is-small is-left">
                <i class="fa fa-envelope"></i>
              </span>
            </div>
            {{form-errors errors=formErrors for='email'}}
          </div>

          <div class="field">
            <label class="label">Password</label>
            <div class="control has-icons-left">
              {{input class='input' type='password' placeholder='Enter your password' value=password}}
              <span class="icon is-small is-left">
                <i class="fa fa-lock"></i>
              </span>
            </div>
            {{form-errors errors=formErrors for='password'}}
            <p class="help">{{#link-to "forgot-password"}}Forgot password?{{/link-to}}</p>
          </div>

          {{form-errors errors=formErrors for='__all__'}}
          <div class="field is-grouped">
            <div class="control">
              <button type="submit" class="button is-primary">
                {{#if inProgress}}
                  Signing in...
                {{else}}
                  Sign in
                {{/if}}
              </button>
            </div>
            <div class="control">
              {{#link-to "signup" class="button is-link"}}Sign up{{/link-to}}
            </div>
          </div>

        </form>

      </div>
      <div class="column"></div>
    </div>
  </div>
</section>
